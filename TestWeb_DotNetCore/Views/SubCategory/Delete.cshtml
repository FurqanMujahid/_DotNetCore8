@model SubCategory

<form method="post" asp-action="Delete">
    <input asp-for="SubCategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="pb-3">
            <label asp-for="SubCategoryName"></label>
            <input asp-for="SubCategoryName" disabled class="form-control" />
        </div>
        <div class="pb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" disabled class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="SubCategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

